@model login.Models.Student
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add Student</h1>
                    <p class="text-center text-danger">@TempData["message"]</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for = "Name"></label>
                            <input type="text" asp-for = "Name" class="form-control" placeholder="Enter Student Name" />
                            <span asp-validation-for="Name" class="text-danger "></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="City"></label>
                            <input type="text" asp-for="City" class="form-control" placeholder="Enter City" />
                            <span asp-validation-for="City" class="text-danger "></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="State"></label>
                            <input type="text" asp-for="State" class="form-control" placeholder="Enter State" />
                            <span asp-validation-for="State" class="text-danger "></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Standerd"></label>
                            <input type="text" asp-for="Standerd" class="form-control" placeholder="Enter Student Standerd" />
                            <span asp-validation-for="Standerd" class="text-danger "></span>
                        </div>
                        <!-- Add other form fields as needed -->                      
                            <button type="submit" class="btn btn-primary float-right">Save</button >                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


