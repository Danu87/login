@model IEnumerable<login.Models.Student>
@{
    ViewData["Title"] = "Index";
}
<h2>Index List</h2>

<div class="Container">
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="text-center text-primary">Student Record</h1>
       <a class="btn btn-sm btn-success m-1" asp-controller="Student" asp-action="Create">Create</a>
       <p class="text-center text-success">@TempData["error"]</p>
        <table class="table table-bordered">
    <thead>
        <tr class ="text-center">
            <th>StudentId</th>
            <th>First Name</th>
            <th>City</th>
            <th>State</th>
            <th>Standerd</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr class="text-center">
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.City</td>
                <td>@student.State</td>
                <td>@student.Standerd</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
        </div>
    </div>
</div>